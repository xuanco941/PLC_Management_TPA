        </div>
    </div>
</div>


@section Scripts{

    <script src="~/lib/ChartJS/chartjs.min.js"></script>

    <script type="text/javascript">


        const data = {
            labels: ["1", "2", "3", "4", "5", "6", "7"],
            datasets: [{
                label: 'Oxi',
                data: [65, 59, 80, 81, 56, 55, 40],
                fill: false,
                borderColor: 'rgb(75, 192, 192)',
                backgroundColor: 'rgb(75, 192, 192)',
                tension: 0.1,

            },
            {
                label: 'Nitor',
                data: [65, 59, 20, 21, 26, 225, 80],
                fill: false,
                borderColor: 'rgb(90, 152, 112)',
                backgroundColor: 'rgb(90, 152, 112)',
                tension: 0.1,
            }]
        };

        const options = {
            plugins: {
                title: {
                    display: true,
                    text: 'Áp suất',
                    font: { size: 19 }
                }
            }
        }



        const ctxl = $("#lineChart").get(0).getContext("2d");
        const lineChart = new Chart(ctxl, { type: 'line', data, options });

    </script>

}
