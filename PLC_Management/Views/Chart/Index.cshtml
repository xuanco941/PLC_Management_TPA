@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12" style="margin-top:25px; margin-bottom:20px;">
        <h1 style="text-align: center;">
            Biểu Đồ Đo Lường
        </h1>
    </div>
    <div class="col-12">
        <div class="tile">
            @*            <h3 class="tile-title">Áp Suất</h3>
